{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myorg/myorg-config": ["libs/myorg/shared/src/lib/app-config/index.ts"],
      "@myorg/myorg-plugin": ["libs/myorg-plugin/src/index.ts"],
      "@myorg/myorg/feature-login": ["libs/myorg/feature-login/src/index.ts"],
      "@myorg/myorg/feature-portal": ["libs/myorg/feature-portal/src/index.ts"],
      "@myorg/myorg/feature-top": ["libs/myorg/feature-top/src/index.ts"],
      "@myorg/myorg/shared/api": ["libs/myorg/shared/api/src/index.ts"],
      "@myorg/myorg/shared/data-access": [
        "libs/myorg/shared/data-access/src/index.ts"
      ],
      "@myorg/shared-old": ["libs/shared-old/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
